<div class="row pt-3">
    <div class="col-12 text-center text-white">
        <h1>Editar produto</h1>
    </div>
</div>

<div class="card border rounded bg-purple">
    <div class="p-5 justify-content-center">
        <form action="/produtos/edit/" method="POST">
            <input type="hidden" name="id" value={{produto._id}}>
            <div class="form-row">
                <div class="col-md-9 col-sm-12 mt-3">
                    <label for="nome" class="form-label font-weight-bold text-warning">Nome do Produto</label>
                    <input type="text" required name="nome" placeholder="Digite o nome do produto" class="form-control"
                        value="{{produto.nome}}">
                </div>
                <div class="col-md-3 col-sm-12 mt-3">
                    <label for="valor" class="form-label font-weight-bold text-warning">Valor</label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$ </div>
                        <input type="text" required name="valor" placeholder="Digite o preço" class="form-control"
                            value="{{produto.valor}}">
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <label for="descricao" class="form-label font-weight-bold text-warning">Descrição</label>
                <textarea name="descricao" required placeholder="Descrição do produto"
                    class="form-control">{{produto.descricao}}</textarea>
            </div>

            <div class=" mt-3">
                <label for="imagem" class="form-label font-weight-bold text-warning">Foto</label>
                <input type="text" required value="{{produto.imagem}}" name="imagem" placeholder="Insira a URL da imagem"
                    class="form-control" />
            </div>
            <div class="col-12 mt-3 text-center">
                <a href="/produtos/" class="btn btn-warning text-white font-weight-normal">Voltar</a>
                <button type="submit" class="btn btn-success ">Cadastrar</button>
            </div>
        </form>
    </div>
</div>