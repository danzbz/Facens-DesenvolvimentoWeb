<div class="row py-4 card row align-items-center border rounded p-2 bg-purple pb-1">
  <div class="col-12 text-center text-white pb-2">
    <h1 class="title pb-3">{{produto.nome}}</h1>
  </div>
  <div class="col-12">
    <p class="pb-0 mb-0 text-center">Valor: R${{produto.valor}}</p>
  </div>
  <div class="col-md-2 py-2">
    <img src="{{produto.imagem}}" class="img-fluid img-thumbnail" alt="{{produto.nome}}">
  </div>
  <div class="col-md-12 text-justify">
    <p>{{produto.descricao}}</p>
  </div>
  <div class="col-12 mt-3 text-center">
    <a href="/produtos/" class="btn btn-warning text-white font-weight-normal">Voltar</a>
  </div>
</div>
