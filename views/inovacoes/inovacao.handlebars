<div class="row py-4 card row align-items-center border rounded p-2 bg-purple pb-1">
  <div class="col-12 text-center text-white pb-2">
    <h1 class="title pb-3">{{inovacao.titulo}}</h1>
  </div>
  <div class="col-12">
    <p class="pb-0 mb-0 text-center">{{inovacao.subtitulo}}</p>
    <p><strong>Por:</strong> {{inovacao.autor}} - {{inovacao.email}}</p>
  </div>
  <div class="col-md-2 py-2">
    <img src="{{inovacao.imagem}}" class="img-fluid img-thumbnail" alt="{{inovacao.titulo}}">
  </div>
  <div class="col-md-12 text-justify">
    <p>{{inovacao.descricao}}</p>
  </div>
</div>

