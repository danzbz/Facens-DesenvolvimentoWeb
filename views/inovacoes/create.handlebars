<div class="row pt-3">
    <div class="col-12 text-center text-white">
        <h1>Criar Projeto de Inovação</h1>
    </div>
</div>
<div class="card border rounded bg-purple">
    <div class="p-5 justify-content-center">
        <form action="/inovacoes/create" method="POST">
            <div class="form-row">
                <div class="col-md-12 col-sm-12 mt-3">
                    <label for="titulo" class="form-label font-weight-bold text-warning">Titulo</label>
                    <input type="text" name="titulo" placeholder="Digite o Titulo" class="form-control">
                </div>
                <div class="col-md-12 col-sm-12 mt-3">
                    <label for="subtitulo" class="form-label font-weight-bold text-warning">Subtitulo</label>
                    <div class="input-group-prepend">
                        <input type="text" name="subtitulo" placeholder="Digite o subtitulo" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="mt-3 col-sm-12 col-md-6">
                    <label for="autor" class="form-label font-weight-bold text-warning">Autor</label>
                    <input name="autor" placeholder="Autor do projeto de inovação" class="form-control">
                </div>
            </div>
            <div class="form-row align-items-center">
                <div class="col-md-6 mt-3">
                    <label for="email" class="form-label font-weight-bold text-warning">Email</label>
                    <input type="text" class="form-control mb-2" name="email" placeholder="Digite o email do autor">
                </div>
            </div>
            <div class="mt-3">
                <label for="descricao" class="form-label font-weight-bold text-warning">Descrição</label>
                <textarea name="descricao" placeholder="Descrição do produto" class="form-control"></textarea>
            </div>
            <div class="mt-3">
                <label for="imagem" class="form-label font-weight-bold text-warning">Fotos</label>
                <input type="text" name="imagem" placeholder="Insira a URL da imagem" class="form-control" />
            </div>
            <div class="col-12 mt-3 text-center">
                <button type="submit" class="btn btn-warning ">Enviar</button>
            </div>
        </form>
    </div>
</div>